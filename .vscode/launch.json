    "version": "0.2.0",
    "configurations": [
        {
            "name": "go-assistant by command",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/goass.go",
            "args": [
                "-cmd=operate",
                "-source=markdown",
                "-opt=clear",
                "-file=${workspaceFolder}/resources/example.md",
                "-arg=3,27,1,-2"
            ]
        },
        {
            "name": "go-assistant by tview",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/goass.go",
            "args": [
                "-dev=true",
            ]
        }
    ]
}