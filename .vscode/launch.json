    "version": "0.2.0",
    "configurations": [
        {
            "name": "go-assistant by command",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "-cmd=secret",
                "-opt=encode",
                "-arg=go",
                "-regexp=\\w+_test",
                "-input=../resources",
                "-output=../resources/resources_go_encode"
            ]
        },
        {
            "name": "go-assistant by tview",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "-dev=true",
            ]
        }
    ]
}